<div class="row">
    <div class="col-lg-6">
      <h4>Authors</h4>
      <ul class="list-inline">
      <% authors.each do |author| %>
      <% fullname = author.name.split(',').reverse.join %>
      <li>
          <% if author.url %>
          <a href="<%= author.url %>"><%= fullname %></a>
          <% else %>
          <%= fullname %>
          <% end %>
          <sup><%= author.affiliations.join(',') %></sup></li>
      <% end %>
      </ul>
    </div>
    <div class="col-lg-6">
      <h4>Affiliations</h4>
      <ul class="list-inline">
      <% affiliations.each_with_index do |affil, index| %>
      <li>
          <% if affil.url %>
          <a href="<%= affil.url %>"><%= affil.name %></a>
          <% else %>
          <%= affil.name %>
          <% end %>
          <sup><%= index+1 %></sup></li>
      <% end %>
      </ul>
    </div>
</div>
